<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zziboo.lifecareapp.MessageNumberActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:text="delete"
            android:onClick="deleteClick"
            android:id="@+id/msgdelbtn"
            android:layout_alignParentRight="true"
            android:background="@drawable/startbtn"/>

        <Button
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:text="add"
            android:id="@+id/msgaddbtn"
            android:layout_toLeftOf="@+id/msgdelbtn"
            android:background="@drawable/startbtn"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameList"
            android:gravity="center"
            android:textSize="15dp"
            android:text="NAME"
            android:layout_weight="2.5"
            android:background="#c6ecce"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phoneNumberList"
            android:gravity="center"
            android:text="PHONE"
            android:textSize="15dp"
            android:layout_weight="1.5"
            android:background="#c6ecce"/>

    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/messageList">
    </ListView>
</LinearLayout>
